<%- include('../_layouts/adminheader') -%>

<h2 class="page-title">Add Pages</h2>
<a href="/admin/pages/edit-pages" class="btn btn-primary">Back to All pages</a>
<form method="POST" class="mt-4" action="/admin/pages/edit-pages/<%= data.slug %>">
    <div class="form-group">
      <label for="title">Enter Title</label>
      <input type="text" class="form-control" placeholder="Enter Title" value="<%= data.title %>"id="title" name="title">
    </div>
    <div class="form-group">
        <label for="title">Enter Slug</label>
        <input type="text" class="form-control" id="Slug"value="<%= data.slug %>" placeholder="Enter Slug" name="Slug">
      </div>
      <div class="form-group">
        <label for="title">Enter content</label>
        <textarea name="content" class="form-control" id="content" placeholder="Enter content" cols="30" rows="10"><%= data.content %></textarea>
      </div>
      <input type="hidden" name="uid" value="<%= data._id %>" />
    <button type="submit" class="btn btn-primary">Update</button>
  </form>

<%- include('../_layouts/adminfooter') -%>
